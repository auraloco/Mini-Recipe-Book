<h1>Add a New Recipe</h1>

<!--Form for new recipe-->
<form action="/recipes" method="POST">
  <label for="title">Title:</label><br />
  <input type="text" id="title" name="title" required /><br /><br />

  <!--Category input with a dropdown-->
  <label for="category">Category:</label>
  <br />
  <select id="category" name="category_id" required>
    <option value="">Select a category</option>
    <option value="1">Dessert</option>
    <option value="2">Main Course</option>
    <option value="3">Appetizer</option>
    <option value="4">Drink</option>
    <option value="5">Snack</option>
  </select><br /><br />

  <label for="ingredients">Ingredients</label><br />
  <textarea id="ingredients" name="ingredients" required></textarea><br /><br />

  <label for="intreuctions">Instructions:</label><br />
  <textarea id="instreuctions" name="instreuctions" required></textarea>

  <button type="submit">Add Recipe</button>

</form>