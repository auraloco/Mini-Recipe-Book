<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <header>
      <nav>
        <!--Hamburger menu for responsivness -->
        <div class="nav-left">
          <button class="hamburger" id="hamburger">â˜°</button>
        </div>

        <div class="nav-center" id="navLinks">
          <a href="/">Home</a>

          <!--Only logged in users will see this and be able to go in-->
          {{#if user}}
            <a href="/recipes">My Recipes</a>
            <a href="/recipes/new">Add Recipe</a>

            <!-- Only show the Users button if  user is admin -->
            {{#if (eq user.username "admin")}}
              <a href="/users">Users</a>
            {{/if}}
          {{/if}}

          <a href="/about">About</a>
          <a href="/contact">Contact</a>

          {{#if user}}
            <a href="/logout" class="auth-btn">Log out</a>
          {{else}}
            <a href="/login" class="auth-btn">Login</a>
            <a href="/signup" class="auth-btn">Sign up</a>
          {{/if}}
        </div>
      </nav>
    </header>
    <main>
      <!--Flash messages-->
      {{#if message}}
        <div class="flash-message {{message.type}}">
          {{message.text}}
        </div>
      {{/if}}
      {{{body}}}
    </main>
    <script src="/script.js"></script>
  </body>
</html>